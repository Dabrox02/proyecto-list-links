<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/edit/{{link.id_link}}" method="POST">
            <div class="form-group my-3">
              <input
                value="{{link.title}}"
                type="text"
                class="form-control"
                name="title"
                placeholder="Titulo"
                autofocus
              />
            </div>
            <div class="form-group my-3">
              <input
                value="{{link.url}}"
                type="url"
                name="url"
                class="form-control"
                placeholder="URL"
                {{! autocomplete="off" }}
                required
              />
            </div>
            <div class="form-group my-3">
              <textarea
                value="{{link.description}}"
                name="description"
                rows="2"
                class="form-control"
                placeholder="Decripcion"
              ></textarea>
            </div>
            <div class="form-group my-3 d-grid">
              <button class="btn btn-success">
                Guardar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>